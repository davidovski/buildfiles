#!/bin/sh

MAKEDEPS="make"
DEPS="libdrm libx11 mesa libxext libxfixes wayland"

DESC="Video Acceleration API"

PKG_VER=2.13.0
SOURCE=https://github.com/intel/libva/releases/download/$PKG_VER/libva-$PKG_VER.tar.bz2

build () {
    mkdir build &&
    cd build
    meson --prefix=/usr \
        -Dwith_glx=yes \
        -Dwith_wayland=yes
    ninja
}

package () {
    DESTDIR=$PKG_DEST ninja install
}
