#!/bin/sh

MAKEDEPS="make "
DEPS="krb5"

PKG_VER=1.3.2
SOURCE=https://downloads.sourceforge.net/libtirpc/libtirpc-$PKG_VER.tar.bz2
DESC="Transport Independent RPC library (SunRPC replacement)"

build () {
    ./configure --prefix=/usr                                   \
            --sysconfdir=/etc                               \
            --disable-static                                
    make
}

package () {
    make DESTDIR=$PKG_DEST install 
}
