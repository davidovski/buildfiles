#!/bin/bash

DEPS=(glibc zlib openssl xz zstd)

PKG_VER=29
SOURCE=https://www.kernel.org/pub/linux/utils/kernel/kmod/kmod-$PKG_VER.tar.xz
DESC="Libraries and utilities for managing kernel modules"

build () {
    ./autogen.sh
    ./configure --prefix=/usr          \
            --sysconfdir=/etc      \
            --with-xz              \
            --with-zstd            \
            --with-zlib

    make
}

package () {
    make DESTDIR=$PKG_DEST install 
    mkdir -p /usr/bin
    ln -sfv kmod $PKG_DERT/usr/bin/depmod
    ln -sfv kmod $PKG_DERT/usr/bin/insmod
    ln -sfv kmod $PKG_DERT/usr/bin/modinfo
    ln -sfv kmod $PKG_DERT/usr/bin/modprobe
    ln -sfv kmod $PKG_DERT/usr/bin/rmmod
    ln -sfv kmod $PKG_DEST/usr/bin/lsmod
}
