#!/bin/bash

MAKEDEPS=(make )
DEPS=(sh)

PKG_VER=5.2.5
SOURCE=https://tukaani.org/xz/xz-$PKG_VER.tar.xz
DESC="Tools for the lzma and xz compression formats"


build () {
    ./autogen.sh
    ./configure --prefix=/usr --disable-static --docdir=/usr/share/doc/xz-$PKG_VER
    make
}

check () {
    make check
}

package () {
    make DESTDIR=$PKG_DEST install
}
