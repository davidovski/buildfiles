#!/bin/bash

DEPS=(glibc)

SOURCE=https://github.com/google/brotli
DESC="A generic-purpose lossless compression algorithm"

build () {
    mkdir out && cd out
    ../configure-cmake
    make 
}
check () {
    make test
}

package () {
    make DESTDIR=$PKG_DEST install
    mv $PKG_DEST/usr/local/* $PKG_DEST/usr/
}
