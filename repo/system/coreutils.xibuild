#!/bin/sh

MAKEDEPS="make "
DEPS="musl acl attr gmp"

SOURCE=https://git.suckless.org/sbase
DESC="sbase from suckless.org"

build () {
    make
}

package () {
    make PREFIX=/usr DESTDIR=$PKG_DEST install 

    for p in tar sed; do
        rm $PKG_DEST/usr/bin/$p
        rm $PKG_DEST/usr/share/man/man1/$p.1
    done
}
