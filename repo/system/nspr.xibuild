#!/bin/bash

DEPS=(glibc bash)

PKG_VER=4.33

SOURCE=https://archive.mozilla.org/pub/nspr/releases/v$PKG_VER/src/nspr-$PKG_VER.tar.gz
DESC="Netscape Portable Runtime"

build () {
    cd nspr
    ./configure \
            --prefix=/usr --with-mozilla --with-pthreads --enable-64bit
    make
}

package () {
    make DESTDIR=$PKG_DEST install 
}
