#!/bin/bash

MAKEDEPS=(make )
DEPS=(libnl libusb)

PKG_VER=1.10.1
SOURCE=https://www.tcpdump.org/release/libpcap-$PKG_VER.tar.gz
DESC="A library providing user level packet capture"

build () {
    ./configure \
            --prefix=/usr
    make
}

package () {
    make DESTDIR=$PKG_DEST install 
}
