#!/bin/sh

MAKEDEPS="make "
DEPS="musl"

SOURCE=https://git.suckless.org/ubase

DESC="ubase from suckless.org"

prepare () {
    /usr/bin/find -type 'f' -name '*.c' | xargs sed -i "s@#include <sys/types.h>@#include <sys/sysmacros.h>@g" 
}

build () {
    make
}

package () {
    make PREFIX=/usr DESTDIR=$PKG_DEST install 

