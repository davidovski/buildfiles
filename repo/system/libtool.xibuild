#!/bin/bash

DEPS=(sh tar glibc)

PKG_VER=2.4.6
SOURCE=https://ftpmirror.gnu.org/libtool/libtool-$PKG_VER.tar.gz
DESC="A generic library support script"

build () {
    ./configure --prefix=/usr
    make
    make check

    make DESTDIR=$PKG_DEST install 
}

package () {
    rm -fv $PKG_DEST/usr/lib/libltdl.a
}
