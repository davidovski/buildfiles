#!/bin/bash

MAKEDEPS=()
DEPS=(pcre)

PKG_VER=2.3.2
SOURCE=https://www.jedsoft.org/releases/slang/slang-$PKG_VER.tar.bz2
DESC="S-Lang is a powerful interpreted language"

build () {
    ./configure --prefix=/usr \
            --sysconfdir=/etc
    make
}

package () {
    make DESTDIR=$PKG_DEST install-all
}
