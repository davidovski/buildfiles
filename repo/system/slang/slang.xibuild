#!/bin/sh

MAKEDEPS=""
DEPS="pcre2"

PKG_VER=2.3.2
SOURCE=https://www.jedsoft.org/releases/slang/slang-$PKG_VER.tar.bz2
DESC="S-Lang is a powerful interpreted language"

build () {
    ./configure --prefix=/usr \
            --sysconfdir=/etc
    make -j1
}

package () {
    make DESTDIR=$PKG_DEST install-all -j1
}
