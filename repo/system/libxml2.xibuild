#!/bin/bash

DEPS=(zlib readline ncurses xz icu)

PKG_VER=2.9.12
SOURCE=http://xmlsoft.org/sources/libxml2-$PKG_VER.tar.gz
DESC="XML parsing library"

build () {
    ./configure --prefix=/usr    \
            --disable-static \
            --with-history   \
            --with-python=/usr/bin/python3 &&
    make
}

package () {
    make DESTDIR=$PKG_DEST install
}
