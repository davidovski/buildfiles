#!/bin/bash

MAKEDEPS=(make )
DEPS=(gcc)

PKG_VER=8.0.6
SOURCE=https://github.com/ivmai/bdwgc/releases/download/v$PKG_VER/gc-$PKG_VER.tar.gz
DESC="A garbage collector for C and C++"

build () {
    ./configure --prefix=/usr --disable-static
    make
}

package () {
    make DESTDIR=$PKG_DEST install
}
