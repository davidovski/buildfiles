#!/bin/sh

NAME="mpd"
DESC="Minimalist command line interface to MPD"

MAKEDEPS="meson ninja "
DEPS="musl libmpdclient "

PKG_VER=0.34
SOURCE="https://www.musicpd.org/download/mpc/${PKG_VER%.*}/mpc-$PKG_VER.tar.xz"

build () {
    mkdir build &&
    cd build    &&
    meson --prefix=/usr \
            .. &&
    ninja
}

package () {
    DESTDIR=$PKG_DEST ninja install
}
