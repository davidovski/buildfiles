#!/bin/sh

MAKEDEPS="make m4"
DEPS="sh tar musl"

PKG_VER=2.4.6
SOURCE=https://ftpmirror.gnu.org/libtool/libtool-$PKG_VER.tar.gz
DESC="A generic library support script"

build () {
    ./configure --prefix=/usr
    make
}

#check () {
