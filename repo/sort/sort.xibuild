#!/bin/sh

MAKEDEPS="make"
DEPS="musl sh"

PKG_VER=0.8.8
SOURCE=http://landley.net/toybox/downloads/toybox-$PKG_VER.tar.gz
DESC="Sort from toybox"

prepare () {
    # remove the -s sort flag missing from sbase
    sed -i "s/sort -s/sort/g" scripts/*.sh
}

build () {
    ./configure 
    make sort
}

package () {
    install -Dm755 sort $PKG_DEST/usr/bin/
}
