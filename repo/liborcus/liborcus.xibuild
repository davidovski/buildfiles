#!/bin/sh

NAME="liborcus"
DESC="Library for processing spreadsheet documents"

MAKEDEPS="boost mdds libixion zlib"

PKG_VER=0.16.1
SOURCE="https://kohei.us/files/orcus/src/liborcus-$PKG_VER.tar.xz"

ADDITIONAL="
fix-include.patch
"

prepare () {
    apply_patches
}

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-python
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$PKG_DEST" install
}

