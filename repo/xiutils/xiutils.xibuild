#!/bin/sh

MAKEDEPS="make gcc"
DEPS="musl sh"

PKG_VER=1.8
SOURCE=https://git.davidovski.xyz/xilinux/xiutils.git
BRANCH="v$PKG_VER"

DESC="Utilities required by various components of the xilinux system"

prepare () {
    mkdir -p dist
    cp src/lib/colors.h dist/
}

build () {
    make
}

check () {
    make check
}

package () {
    make PREFIX=/usr DESTDIR=$PKG_DEST install
}
