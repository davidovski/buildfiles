#!/bin/bash

MAKEDEPS=(make help2man)
DEPS=(glibc bash)

PKG_VER=1.4.19
SOURCE=https://ftp.gnu.org/gnu/m4/m4-$PKG_VER.tar.xz
DESC="The gnu m4 macro processor"


build () {
    ./configure --prefix=/usr 
    make
}

check () {
    make check || true
}

package () {
    make DESTDIR=$PKG_DEST install
}
