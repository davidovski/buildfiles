#!/bin/sh

MAKEDEPS="make "
DEPS="musl m4 sh"

PKG_VER=3.8.1
SOURCE=https://ftp.gnu.org/gnu/bison/bison-$PKG_VER.tar.xz
DESC="The GNU general-purpose parser generator"

build () {
    ./configure --prefix=/usr --docdir=/usr/share/doc/bison-$PKG_VER
    make
}

check () {
    make check 
}

package () {
    make DESTDIR=$PKG_DEST install 
}
