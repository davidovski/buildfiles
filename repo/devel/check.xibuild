#!/bin/bash

MAKEDEPS=(make )
DEPS=(awk)

PKG_VER=0.15.2
SOURCE=https://github.com/libcheck/check/releases/download/$PKG_VER/check-$PKG_VER.tar.gz
DESC="A unit testing framework for C"

build () {
    ./configure --prefix=/usr --disable-static
    make
}

package () {
    make DESTDIR=$PKG_DEST install 
}
