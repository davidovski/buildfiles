#!/bin/sh

MAKEDEPS="make "
DEPS="docbook-xml"

PKG_VER=2.0.7
SOURCE=http://files.itstool.org/itstool/itstool-2.0.7.tar.bz2
DESC="Extract messages from XML files and output PO template files"

build () {
    PYTHON=/usr/bin/python3 ./configure --prefix=/usr &&
    make
}

package () {
    make DESTDIR=$PKG_DEST install
}


