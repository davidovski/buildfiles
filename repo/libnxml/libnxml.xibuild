#!/bin/sh

NAME="libnxml"
DESC="C library for parsing, writing and creating XML 1.0 and 1.1 files or streams"

MAKEDEPS=" curl"

PKG_VER=0.18.3
SOURCE="http://www.autistici.org/bakunin/libnxml/libnxml-$PKG_VER.tar.gz"

build() {
	./configure --prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$PKG_DEST" install
}

