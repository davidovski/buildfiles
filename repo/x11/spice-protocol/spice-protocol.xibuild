#!/bin/sh

MAKEDEPS="make"
DEPS="xorg-server"

DESC="Spice protocol headers"

PKG_VER=0.14.3
SOURCE=https://www.spice-space.org/download/releases/spice-protocol-$PKG_VER.tar.xz

build () {
    mkdir build 
    cd build
    meson --prefix=/usr ..
    ninja
}

package () {
    DESTDIR=$PKG_DEST ninja install
}
