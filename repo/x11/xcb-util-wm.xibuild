#!/bin/sh

MAKEDEPS="make"
DEPS="xcb-util"

PKG_VER=0.4.1
SOURCE=https://xcb.freedesktop.org/dist/xcb-util-wm-$PKG_VER.tar.bz2

DESC="Utility libraries for XC Binding, with client and window-manager helpers"

build () {
    ./configure $XORG_CONFIG &&
    make
}

package () {
    make DESTDIR=$PKG_DEST install
}
