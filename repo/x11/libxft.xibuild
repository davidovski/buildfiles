#!/bin/sh

MAKEDEPS="make asciidoc xmlto lynx"
DEPS="fontconfig libxcb elogind"

PKG_VER=2.3.4
SOURCE=https://www.x.org/pub/individual/lib/libXft-$PKG_VER.tar.bz2

build () {
