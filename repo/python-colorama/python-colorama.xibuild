#!/bin/sh

MAKEDEPS="python"
DEPS="%deps%"

PKG_VER=0.4.4
SOURCE=https://files.pythonhosted.org/packages/source/c/colorama/colorama-$PKG_VER.tar.gz
DESC="Cross-platform colored terminal text."

build() {
    python setup.py build
}

package () {
    python setup.py install --root="$PKG_DEST" --optimize=1
}
